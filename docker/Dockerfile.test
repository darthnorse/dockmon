# Test environment for DockMon frontend
FROM node:20-alpine

WORKDIR /app/ui

# Install dependencies needed for jsdom (browser environment simulation)
RUN apk add --no-cache \
    chromium \
    nss \
    freetype \
    harfbuzz \
    ca-certificates \
    ttf-freefont

# Set environment variables for Chromium
ENV CHROME_BIN=/usr/bin/chromium-browser
ENV CHROME_PATH=/usr/lib/chromium/

# Copy package files
COPY ui/package*.json ./

# Install dependencies
RUN npm ci

# Copy source files
COPY ui/ ./

# Run tests by default
CMD ["npm", "test", "--", "--run"]
